<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.commission.PictureAcitivty">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/column_height">
            <TextView
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_end"
                android:text="查询方式"
                android:textColor="#000000"
                android:textSize="@dimen/other_size"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Spinner
                android:layout_weight="1"
                android:id="@+id/spi"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </Spinner>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginRight="@dimen/padding_end"
                android:layout_height="match_parent">
                <Button
                    android:layout_alignParentRight="true"
                    android:id="@+id/quert"
                    android:text="查询"
                    android:background="@drawable/round_coner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff" />
            </RelativeLayout>

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:id="@+id/container"
            android:layout_height="@dimen/column_height">
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/padding_end"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/first"
                    android:gravity="center_vertical"
                    android:text="时间"
                    android:textSize="@dimen/other_size"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/year"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:textSize="@dimen/other_size"
                    android:textColor="#000000"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/years"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/other_size"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="年" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/second"
                android:paddingRight="@dimen/padding_end"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/month"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:textSize="@dimen/other_size"
                    android:textColor="#000000"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/mmonth"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/other_size"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="月" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />
</LinearLayout>
