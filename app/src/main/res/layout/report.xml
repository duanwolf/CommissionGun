<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:orientation="vertical"
    tools:context="com.commissiongun.ReportActivity">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:isScrollContainer="true"
    android:orientation="vertical"
    tools:context="com.commission.ReportActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/column_height"
            android:background="#ffffff">

            <TextView
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Money:"
                android:paddingLeft="@dimen/padding_end"
                android:textSize="@dimen/other_size"
                android:textColor="#000000"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/money"
                android:textSize="@dimen/other_size"
                android:textColor="#000000"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/column_height"
            android:background="#ffffff"
            android:layout_marginTop="1dp">

            <TextView
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Locks:"
                android:paddingLeft="@dimen/padding_end"
                android:textSize="@dimen/other_size"
                android:textColor="#000000"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/num_locks"
                android:textSize="@dimen/other_size"
                android:textColor="#000000"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/column_height"
            android:background="#ffffff"
            android:layout_marginTop="1dp">

            <TextView
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Stocks:"
                android:paddingLeft="@dimen/padding_end"
                android:textSize="@dimen/other_size"
                android:textColor="#000000"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/num_stocks"
                android:textSize="@dimen/other_size"
                android:textColor="#000000"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/column_height"
            android:background="#ffffff"
            android:layout_marginTop="1dp">

            <TextView
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Barrels:"
                android:paddingLeft="@dimen/padding_end"
                android:textSize="@dimen/other_size"
                android:textColor="#000000"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/num_barrels"
                android:textSize="@dimen/other_size"
                android:textColor="#000000"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/column_height"
            android:background="#ffffff"
            android:layout_marginTop="1dp">

            <TextView
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Update time:"
                android:paddingLeft="@dimen/padding_end"
                android:textSize="@dimen/other_size"
                android:textColor="#000000"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/update_time"
                android:textSize="@dimen/other_size"
                android:textColor="#000000"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/char_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></LinearLayout>
</LinearLayout>
</ScrollView>